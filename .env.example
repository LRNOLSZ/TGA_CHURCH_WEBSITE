# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-generate-a-secure-one

# Database Configuration
# ⚠️ IMPORTANT: In production, use a strong password and consider using a database service
# NEVER commit your actual DB_PASSWORD to Git
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_secure_password_here_use_strong_password
DB_HOST=localhost
DB_PORT=5432

# Allowed Hosts (comma-separated)
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS Origins (comma-separated) - Only add frontend domains you trust
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Settings (Production)
# HSTS max age in seconds (1 year = 31536000)
SECURE_HSTS_SECONDS=31536000

# File Upload Settings
MAX_IMAGE_SIZE=5242880  # 5MB in bytes
MAX_DOCUMENT_SIZE=10485760  # 10MB in bytes

# ⚠️ DATABASE PASSWORD SECURITY RECOMMENDATIONS:
# 1. Use environment variables for all database credentials
# 2. In production, rotate database passwords regularly
# 3. Use database connection pooling
# 4. Enable database audit logging
# 5. Restrict database access by IP address
# 6. Use SSL/TLS for database connections

