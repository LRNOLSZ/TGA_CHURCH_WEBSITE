# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-generate-a-secure-one

# Database Configuration
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Allowed Hosts (comma-separated)
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS Origins (comma-separated) - Only add frontend domains you trust
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Settings (Production)
# HSTS max age in seconds (1 year = 31536000)
SECURE_HSTS_SECONDS=31536000
